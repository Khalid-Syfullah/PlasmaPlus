<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    tools:context=".ViewDonorProfileActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-39dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:paddingBottom="20dp">

            <androidx.cardview.widget.CardView

                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/button_style_white"
                app:cardCornerRadius="30dp"
                app:cardElevation="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/donor_profile_header">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style_white">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:cardCornerRadius="40dp"
                        app:layout_constraintBottom_toTopOf="@+id/donor_profile_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/donor_profile_gender_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:scaleType="centerCrop"
                                android:src="@drawable/profile_icon_male"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/donor_profile_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="@string/label_name"

                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        app:layout_constraintEnd_toEndOf="@+id/cardView3"
                        app:layout_constraintStart_toStartOf="@+id/cardView3"
                        app:layout_constraintTop_toBottomOf="@+id/cardView3" />

                    <TextView
                        android:id="@+id/donor_profile_label_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat"

                        android:text="@string/label_age"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/donor_profile_name" />

                    <TextView
                        android:id="@+id/donor_profile_age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_marginStart="96dp"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/label_age_1"
                        android:textColor="@color/textColorDark"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/donor_profile_label_age"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/donor_profile_label_age"
                        app:layout_constraintTop_toTopOf="@+id/donor_profile_label_age"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/donor_profile_label_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/address_with_colon"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/donor_profile_label_age"
                        app:layout_constraintTop_toBottomOf="@+id/donor_profile_label_age" />

                    <TextView
                        android:id="@+id/donor_profile_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/montserrat"
                        android:maxWidth="172dp"
                        android:text="@string/profile_address"
                        android:textColor="@color/textColorDark"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/donor_profile_label_address"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/donor_profile_age"
                        app:layout_constraintTop_toBottomOf="@+id/donor_profile_age"
                        app:layout_constraintVertical_bias="0.0" />

                    <TextView
                        android:id="@+id/donor_profile_label_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/donor_profile_label_type"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/donor_profile_label_phone"
                        app:layout_constraintTop_toBottomOf="@+id/donor_profile_label_blood_group"
                        app:layout_constraintVertical_bias="1.0" />

                    <TextView
                        android:id="@+id/donor_profile_type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/donor_profile_type"
                        android:textColor="@color/textColorDark"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/donor_profile_label_type"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/donor_profile_blood_group"
                        app:layout_constraintTop_toBottomOf="@+id/donor_profile_blood_group" />

                    <TextView
                        android:id="@+id/donor_profile_label_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/phone_with_colon"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/donor_profile_label_address"
                        app:layout_constraintTop_toBottomOf="@+id/donor_profile_address" />

                    <TextView
                        android:id="@+id/donor_profile_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/phone"
                        android:textColor="@color/textColorDark"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/donor_profile_label_phone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/donor_profile_address"
                        app:layout_constraintTop_toBottomOf="@+id/donor_profile_address" />

                    <TextView
                        android:id="@+id/donor_profile_label_blood_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/blood_group_with_colon"
                        android:textColor="@color/colorAccent"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/donor_profile_label_phone"
                        app:layout_constraintTop_toBottomOf="@+id/donor_profile_label_phone" />

                    <TextView
                        android:id="@+id/donor_profile_blood_group"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="18dp"
                        android:layout_marginEnd="32dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/label_blood_grp"
                        android:textColor="@color/textColorDark"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/donor_profile_label_blood_group"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/donor_profile_phone"
                        app:layout_constraintTop_toBottomOf="@+id/donor_profile_phone" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/donor_profile_send_request_suggestion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/donor_profile_send_request_suggestion"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <Button
                android:id="@+id/donor_profile_ask_for_help_button"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_style_blue"
                android:elevation="10dp"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/ask_for_help"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/donor_profile_progressBar" />

            <TextView
                android:id="@+id/donor_profile_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="26dp"
                android:fontFamily="@font/montserrat_bold"

                android:text="@string/donor_profile_header"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/donor_profile_back_button"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/donor_profile_decline_button"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_style_colored"
                android:elevation="10dp"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/decline_request"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toEndOf="@+id/donor_profile_accept_button"
                app:layout_constraintTop_toBottomOf="@+id/donor_profile_ask_for_help_button" />

            <ImageView
                android:id="@+id/donor_profile_back_button"
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:padding="15dp"
                android:src="@drawable/back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/donor_profile_progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/cardView" />

            <Button
                android:id="@+id/donor_profile_accept_button"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_style_green"
                android:elevation="10dp"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/accept_request"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/donor_profile_decline_button"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/donor_profile_ask_for_help_button" />

            <Button
                android:id="@+id/donor_profile_confirm_donation_button"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_style_orange"
                android:elevation="10dp"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/confirm_donation"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="gone"
                app:layout_constraintEnd_toStartOf="@+id/donor_profile_decline_donation_button"
                app:layout_constraintStart_toStartOf="@+id/cardView"
                app:layout_constraintTop_toBottomOf="@+id/donor_profile_accept_button" />

            <Button
                android:id="@+id/donor_profile_decline_donation_button"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/button_style_purple"
                android:elevation="10dp"
                android:fontFamily="@font/raleway_bold"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/decline_donation"
                android:textAlignment="center"
                android:textColor="#ffffff"
                android:textSize="10sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/cardView"
                app:layout_constraintStart_toEndOf="@+id/donor_profile_confirm_donation_button"
                app:layout_constraintTop_toBottomOf="@+id/donor_profile_decline_button" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>