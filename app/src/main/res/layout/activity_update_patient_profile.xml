<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatePatientProfileActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Spinner
            android:id="@+id/update_patient_division_spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:entries="@array/division"
            android:minHeight="40dp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_hospital_edittext"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/update_patient_hospital_edittext"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_label_spinner_division" />

        <TextView
            android:id="@+id/update_patient_label_spinner_division"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/label_division"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_hospital_edittext"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/update_patient_label_hospital"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_hospital_edittext" />

        <ImageView
            android:id="@+id/update_patient_back_button"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_marginStart="8dp"
            android:padding="15dp"
            android:src="@drawable/back_button"
            app:layout_constraintBottom_toBottomOf="@+id/update_patient_heading_textview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/update_patient_heading_textview" />

        <TextView
            android:id="@+id/update_patient_heading_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-16dp"
            android:layout_marginTop="16dp"


            android:fontFamily="@font/montserrat_bold"
            android:text="@string/update_profile"
            android:textColor="@color/textColorDark"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/update_patient_back_button"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/update_patient_label_name"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/label_name"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_name_edittext"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/update_patient_name_edittext"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_heading_textview" />

        <EditText
            android:id="@+id/update_patient_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_dark"

            android:fontFamily="@font/montserrat"
            android:hint="@string/enter_name_hint"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/textColorDark"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_label_name" />

        <TextView
            android:id="@+id/update_patient_label_age"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/label_age_1"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_age_edittext"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/update_patient_age_edittext"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_name_edittext" />

        <EditText
            android:id="@+id/update_patient_age_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/edit_text_dark"
            android:fontFamily="@font/montserrat"
            android:hint="@string/enter_age_hint"

            android:inputType="number"
            android:paddingStart="25dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp"
            android:textColor="@color/textColorDark"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_label_age" />


        <TextView
            android:id="@+id/update_patient_label_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/label_gender"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_age_edittext"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/update_patient_age_edittext"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_age_edittext" />

        <ImageView
            android:id="@+id/update_patient_male_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/male_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_label_gender" />

        <ImageView
            android:id="@+id/update_patient_female_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="96dp"
            android:src="@drawable/female_icon"
            app:layout_constraintBottom_toBottomOf="@+id/update_patient_male_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/update_patient_male_icon"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/update_patient_label_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/label_hospital"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_male_icon" />

        <EditText
            android:id="@+id/update_patient_hospital_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_dark"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:hint="@string/update_patient_hospital_edittext"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"

            android:textColor="@color/textColorDark"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_label_hospital"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/update_patient_label_hospital"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_label_hospital" />

        <TextView
            android:id="@+id/update_patient_label_spinner_district"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/label_district"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_hospital_edittext"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/update_patient_label_hospital"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_division_spinner" />

        <Spinner
            android:id="@+id/update_patient_district_spinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:minHeight="40dp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_hospital_edittext"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="@+id/update_patient_hospital_edittext"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_label_spinner_district" />


        <TextView
            android:id="@+id/update_patient_date_textview"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_dark"
            android:fontFamily="@font/montserrat"
            android:gravity="center_vertical"
            android:hint="@string/select_date_textview"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/textColorDark"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_label_date"
            app:layout_constraintStart_toStartOf="@+id/update_patient_label_date"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_label_date" />

        <TextView
            android:id="@+id/update_patient_label_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/update_patient_label_date"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_district_spinner"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/update_patient_district_spinner"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_district_spinner" />


        <TextView
            android:id="@+id/update_patient_number_of_unit_required"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="@string/quantity_of_blood_needed_in_units"
            android:textColor="@color/textColorDark"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/update_patient_date_textview"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_date_textview" />

        <EditText
            android:id="@+id/update_patient_number_of_unit_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_dark"
            android:gravity="center_vertical"
            android:hint="@string/how_many_bags_units_of_blood_is_needed"
            android:inputType="number"
            android:maxLength="2"
            android:minHeight="40dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/textColorDark"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_number_of_unit_required"
            app:layout_constraintStart_toStartOf="@+id/update_patient_number_of_unit_required"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_number_of_unit_required" />

        <Button
            android:id="@+id/update_patient_request_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/button_style_colored"
            android:fontFamily="@font/montserrat_bold"
            android:maxWidth="350dp"
            android:minWidth="320dp"
            android:text="@string/update_profile"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/update_patient_date_textview"
            app:layout_constraintStart_toStartOf="@+id/update_patient_date_textview"
            app:layout_constraintTop_toBottomOf="@+id/update_patient_number_of_unit_editText"
            app:layout_constraintVertical_bias="1.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>