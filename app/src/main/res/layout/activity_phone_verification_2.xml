<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".PhoneVerificationActivity2">


    <ProgressBar
        android:id="@+id/phn_ver2_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"

        android:indeterminateDrawable="@drawable/progress_bar_style"

        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/phn_ver2_otp_button"
        app:layout_constraintStart_toStartOf="@+id/phn_ver2_otp_button"
        app:layout_constraintTop_toBottomOf="@+id/phn_ver2_otp_button" />

    <ImageView
        android:id="@+id/phn_ver2_upper_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"

        android:src="@drawable/upper_back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/phn_ver2_back_button"
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:padding="15dp"
        android:src="@drawable/back_button_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/phn_ver2_header_textview"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginStart="-16dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/phone_verification"
        android:textColor="#ffffff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/phn_ver2_back_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/phn_ver2_back_button"
        app:layout_constraintTop_toTopOf="@+id/phn_ver2_back_button" />

    <TextView
        android:id="@+id/phn_ver2_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/verify_otp"
        android:textColor="@color/textColorDark"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phn_ver2_upper_back" />

    <EditText

        android:id="@+id/phn_ver2_otp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text_dark"
        android:fontFamily="@font/raleway_bold"
        android:hint="@string/password_hint"
        android:inputType="numberDecimal"
        android:maxLength="6"
        android:minHeight="40dp"
        android:padding="15dp"
        android:textColor="@color/textColorDark"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/phn_ver2_otp_button"
        app:layout_constraintStart_toStartOf="@+id/phn_ver2_otp_button"
        app:layout_constraintTop_toBottomOf="@+id/phn_ver2_phone_text" />

    <Button

        android:id="@+id/phn_ver2_otp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_style_colored"
        android:fontFamily="@font/montserrat_bold"
        android:maxWidth="350dp"
        android:minWidth="320dp"
        android:text="@string/verify_otp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phn_ver2_otp"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>